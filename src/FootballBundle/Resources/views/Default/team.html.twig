{% extends 'FootballBundle::base.html.twig' %}

{% block body %}
    <h3>{{ name }}</h3>
    <div>
        <ul>
        {% for id, player in players %}
            <li><a href="{{ path('player', {'country': code, 'id': id}) }}"> {{ player.name }}</a></li>
        {% endfor %}
        </ul>
    </div>
    <div>Coach: <a href="{{ path('coach', {'country': code}) }}"> {{ coach.name }}</a></div>
{% endblock %}